<UserControl x:Class="TaskBord_v2.CustomControls.TaskCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskBord_v2.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel>
            <Grid>
            <ContentControl x:Name="NameBlock" MouseDoubleClick="ContentControl_MouseDoubleClick">
                <TextBlock Text="{Binding Name}"/>
            </ContentControl>

                <ContentControl x:Name="NameBox" Visibility="Collapsed">
                    <TextBox Text="{Binding Name}"/>
            </ContentControl>
            </Grid>
            
            <TextBlock Text="{Binding Description}"/>
            <TextBox Text="{Binding Name}"/>
        </StackPanel>
    </Grid>
</UserControl>
