<UserControl x:Class="TaskBord_v2.CustomControls.TextBoxBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskBord_v2.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ContentControl x:Name="NameBlock" MouseDoubleClick="ContentControl_MouseDoubleClick">
            <TextBlock Text="{Binding TextString, RelativeSource={RelativeSource AncestorType={x:Type local:TextBoxBlock}}}"/>
        </ContentControl>

        <TextBox x:Name="NameBox" Visibility="Collapsed" Text="{Binding TextString, RelativeSource={RelativeSource AncestorType={x:Type local:TextBoxBlock}}}" LostFocus="TextBox_LostFocus"/>

    </Grid>
</UserControl>
